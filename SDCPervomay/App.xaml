<Application x:Class="SDCPervomay.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SDCPervomay"
             StartupUri="\View\Windows\MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="Gotham Pro">
            <Setter Property="TextElement.FontFamily" Value="Resources/Fonts/gothampro.ttf" />
        </Style>
        <!--#region TextBlock Style-->
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontFamily" Value="C:\Users\Елизавета\source\repos\SDCPervomay\SDCPervomay\Resources\Fonts\gothampro.ttf" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <!--#endregion-->
        <!--#region TextBox Style-->
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontFamily" Value="Tahoma" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Padding" Value="5 0" />
        </Style>
        <!--#endregion-->
        <!--#region PasswordBox Style-->
        <Style TargetType="PasswordBox">
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontFamily" Value="Tahoma" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Padding" Value="5 0" />
        </Style>
        <!--#endregion-->
        <!--#region CheckBox Style-->
        <Style TargetType="CheckBox">
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontFamily" Value="Tahoma" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>
        <!--#endregion-->
        <!--#region Button Style-->
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontFamily" Value="Tahoma" />
            <Setter Property="Height" Value="50" />
            <Setter Property="Padding" Value="10 0" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
        </Style>
        <!--#endregion-->
        <!--#region ComboBox Style-->
        <Style TargetType="ComboBox">
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontFamily" Value="Tahoma" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Padding" Value="5 0" />
        </Style>
        <!--#endregion-->
        <!--#region GroupBox Style-->
        <Style TargetType="GroupBox">
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontFamily" Value="Tahoma" />
            <Setter Property="BorderThickness" Value="0" />
        </Style>
        <!--#endregion-->
        <!--#region DatePicker Style-->
        <Style TargetType="DatePicker">
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontFamily" Value="Tahoma" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />

        </Style>
    </Application.Resources>
</Application>
