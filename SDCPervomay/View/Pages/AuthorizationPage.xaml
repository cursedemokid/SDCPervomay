<Page x:Class="SDCPervomay.View.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SDCPervomay.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="704" d:DesignWidth="1280"
      Title="AuthorizationPage">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="500" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="1" Width="900">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="5" />
                <RowDefinition Height="10" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="10" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="10" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>
            <TextBox Grid.Row="1" Name="LoginTb" Height="70" BorderThickness="0" TextChanged="LoginTb_TextChanged"/>
            <TextBlock Name="LoginTbl"  Grid.Row="1" Text="Введите логин"/>
            <Separator Grid.Row="2" BorderThickness="10" BorderBrush="bLACK"/>
            <PasswordBox Name="PasswordPb" Grid.Row="4" Height="70"  BorderThickness="0" PasswordChanged="PasswordPb_PasswordChanged"/>
            <TextBlock Name="PasswordTbl" Grid.Row="4" Text="Введите пароль"/>
            <Separator Grid.Row="5" BorderThickness="10" BorderBrush="bLACK"/>
            <Button Grid.Row="7" Content="Войти" Background="White" Click="Button_Click"/>
        </Grid>
    </Grid>
</Page>
