<Page x:Class="SDCPervomay.View.Pages.ReceptionPages.CustomersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SDCPervomay.View.Pages.ReceptionPages"
      mc:Ignorable="d" 
      d:DesignHeight="558" d:DesignWidth="1280"
      Title="CustomersPage">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="10" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <ComboBox Name="CategoryCmb" SelectionChanged="CategoryCmb_SelectionChanged">
                <ComboBoxItem Name="Kids" Content="Дети до 18"/>
                <ComboBoxItem Name="Grows" Content="Старше 18"/>
            </ComboBox>
            
            <TextBox Name="SearchTb" Grid.Column="2" Width="600" TextChanged="TextBox_TextChanged"/>
            <Button Name="AddCustomer" Grid.Column="4" Content="Добавить посетителя" Click="AddCustomer_Click"/>
        </Grid>

        <ListView Name="CustomersLv" Grid.Row="2">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="№" DisplayMemberBinding="{Binding Id}" />
                    <GridViewColumn Header="ФИО" DisplayMemberBinding="{Binding Fullname}"/>
                    <GridViewColumn Header="Номер телефона" DisplayMemberBinding="{Binding Contact}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Page>
