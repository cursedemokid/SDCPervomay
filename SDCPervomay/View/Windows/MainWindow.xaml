<Window x:Class="SDCPervomay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SDCPervomay"
        mc:Ignorable="d"
        Title="СДЦ Первомайское" Width="1280" Height="720"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#F0F0F0" Padding="20,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="10" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <TextBlock Text="СДЦ Первомайское" 
                           FontSize="24" 
                           FontWeight="Bold"
                           HorizontalAlignment="Center"/>
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Name="CustomersTbl"
                        Grid.Column="0"
                        FontSize="25"
                        FontWeight="Bold"
                        Text="Посетители"
                        MouseDown="TextBlock_MouseDown_2"
                        Cursor="Hand"/>
                    <TextBlock
                        Name="ScheduleTbl"
                        Grid.Column="2"
                        FontSize="25"
                        FontWeight="Bold"
                        Text="Расписание"
                        MouseDown="TextBlock_MouseDown_3"
                        Cursor="Hand"/>
                    <TextBlock
                        Name="KeysTbl"
                        Grid.Column="4"
                        FontSize="25"
                        FontWeight="Bold"
                        Text="Ключи"
                        MouseDown="TextBlock_MouseDown_4"
                        Cursor="Hand"/>
                    <TextBlock
                        Grid.Column="6"
                        FontSize="25"
                        FontWeight="Bold"
                        Text="Назад"
                        MouseDown="TextBlock_MouseDown_5"
                        Cursor="Hand"/>
                    <TextBlock
                        Grid.Column="8"
                        FontSize="25"
                        FontWeight="Bold"
                        Text="Выход"
                        MouseDown="TextBlock_MouseDown_6"
                        Cursor="Hand"/>
                </Grid>
            </Grid>
            
        </Border>

        <ScrollViewer Grid.Row="1" 
                VerticalScrollBarVisibility="Auto" 
                HorizontalScrollBarVisibility="Auto">
            <Frame Name="MainFrame"
               NavigationUIVisibility="Hidden"/>
        </ScrollViewer>



        <Border Grid.Row="2" 
                Background="#F8F8F8" 
                Height="40">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="© СДЦ Первомайское"
                       Foreground="#666666"
                           Margin="10 10 10 10"/>
                <TextBlock Text="Контакты" 
                           FontWeight="SemiBold"
                           Foreground="#0078D4"
                           MouseDown="TextBlock_MouseDown"
                           Width="70"
                           Cursor="Hand"
                           Margin="10 10 10 10"/>
                <TextBlock Text="Тех. Поддержка" 
                           FontWeight="SemiBold"
                           Foreground="#0078D4"
                           MouseDown="TextBlock_MouseDown_1"
                           Cursor="Hand"
                           Width="110"
                           Margin="10 10 10 10"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
